{
  "name": "todoExpress",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^7.2.2",
    "yarn-recursive": "^1.1.0"
  },
  "devDependencies": {
    "eslint": "^8.18.0"
  },

  "scripts": {
    "install": "yarn-recursive",
    "web": "yarn --cwd frontend/ start",
    "api": "yarn --cwd api/ start",
    "proxy": "yarn --cwd proxy/ start",
    "build": "yarn --cwd api/ build; yarn --cwd frontend/ build",
    "lint": "eslint api/index.js frontend/index.js proxy/index.js",
    "start": "concurrently \"yarn api\" \"yarn web\" \"yarn proxy\" --kill-others"
  }
}
